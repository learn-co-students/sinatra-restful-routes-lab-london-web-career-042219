<h2><%= @recipe.name %></h2>

<form action="/recipes/<%= @recipe.id %>" method="post">
  <input type="hidden" name="_method" value="patch" />
  <div>
    <label>Name:</label>
    <input type="text" name="recipe[name]" value="<%= @recipe.name %>" />
  </div>

  <div>
    <label>Ingredients:</label>
    <input type="text" name="recipe[ingredients]" value="<%= @recipe.ingredients %>" />
  </div>

  <div>
    <label>Cook Time:</label>
    <input type="text" name="recipe[cook_time]" value="<%= @recipe.cook_time %>" />
  </div>

  <input type="submit" value="Edit <%= @recipe.name %>" />
</form>
