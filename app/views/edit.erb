<h1> Edit <%= @recipe.name %> </h1>

<a href="/recipes/">Go back</a>

<form method="post" action="/recipes/<%= @recipe.id %>">
    <input id="hidden" type="hidden" name="_method" value="patch"/>
    <h2>Recipes</h2>
    <h3>Name: <input type="text" name="recipe[name]" value="<%= @recipe.name %>"/><br></h3>
    <h4>Ingredients: <input type="text" name="recipe[ingredients]" value="<%= @recipe.ingredients %>"/></h4><br>
    <h4>Cook Type: <input type="text" name="recipe[cook_time]" value="<%= @recipe.cook_time %>"/></h4><br>
    <input type="submit" value="submit">
</form>

<form action="/recipes/<%= @recipe.id %>" method="post">
    <input type="hidden" name="_method" value="delete"/>
    <input id="my submit" type="submit" value="Delete Recipe"/>
</form>

